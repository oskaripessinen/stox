{
    "family": "stox-backend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::622718430431:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::622718430431:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "stox-backend",
            "image": "622718430431.dkr.ecr.eu-north-1.amazonaws.com/stox:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PORT",
                    "value": "3001"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/stox-backend",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "wget --no-verbose --tries=1 --spider http://localhost:3001/api/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        },
        {
            "name": "valkey",
            "image": "valkey/valkey:8",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 6379,
                    "hostPort": 6379,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/stox-backend",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "valkey",
                    "awslogs-create-group": "true"
                }
            }
        }
    ]
}
